<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="XamarinComponents.ComponentsTitleAndDescription"
    x:Name="ViewTitleAndDescription">
    <ContentView.Content>
        <StackLayout
            HorizontalOptions="FillAndExpand"
            BackgroundColor="Transparent"
            Padding="5,0"
            Spacing="10">
            <Label
                Text="{Binding Title, Source={x:Reference ViewTitleAndDescription}}"
                Style="{StaticResource Title}"/>
            <Label
                Text="{Binding Description, Source={x:Reference ViewTitleAndDescription}}"
                Style="{StaticResource Description}"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>
